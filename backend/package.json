{
  "name": "culturaflow-backend",
  "version": "1.0.0",
  "description": "Backend API for CulturaFlow - Cultural Education Mobile App",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/simple-server.ts",
    "dev-full": "nodemon -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watchAll",
    "migrate": "npx prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:reset": "npx prisma migrate reset",
    "migrate:status": "npx prisma migrate status",
    "generate": "npx prisma generate",
    "seed": "tsx src/scripts/seed.ts",
    "db:push": "npx prisma db push",
    "db:pull": "npx prisma db pull",
    "db:validate": "npx prisma validate",
    "db:backup": "./scripts/migration-workflow.sh production backup",
    "db:deploy:dev": "./scripts/migration-workflow.sh development full-deploy",
    "db:deploy:staging": "./scripts/migration-workflow.sh staging full-deploy",
    "db:deploy:prod": "./scripts/migration-workflow.sh production full-deploy",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:dev": "docker-compose up -d",
    "docker:staging": "docker-compose -f docker-compose.staging.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.production.yml up -d",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "deploy:prod": "./scripts/deploy-production.sh"
  },
  "keywords": [
    "culturaflow",
    "education",
    "mobile-api",
    "culture",
    "react-native-backend"
  ],
  "author": "CulturaFlow Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.1",
    "@prisma/client": "^5.6.0",
    "@sentry/node": "^7.99.0",
    "@sentry/profiling-node": "^1.3.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "prisma": "^5.6.0",
    "prom-client": "^15.1.0",
    "sharp": "^0.32.6",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.6.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
